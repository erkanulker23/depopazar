# Server Configuration
PORT=4100
NODE_ENV=production
# Frontend uygulamanızın çalışacağı URL (CORS ayarları için gereklidir)
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=your_db_name

# JWT Configuration (Lütfen bunları production ortamında değiştirin)
JWT_SECRET=change_this_to_a_random_secret_string
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=change_this_to_another_random_secret_string
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Optional - if used)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
