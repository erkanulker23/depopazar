# Tüm istekleri index.php'ye yönlendir (Apache)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Güvenlik: üst dizinlere erişimi engelle
<FilesMatch "^\.">
    Require all denied
</FilesMatch>
